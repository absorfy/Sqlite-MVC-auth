@model MyMVCAppAuth.Models.HeroViewModel

<h1>Details</h1>

<div>
    <h4>HeroEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            @await Html.PartialAsync("_HeroAvatar", Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassId)
        </dt>
        <dd class = "col-sm-10">
            @await Html.PartialAsync("_DisplayHeroClass", Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SkillIds)
        </dt>
        <dd class = "col-sm-10">
            @await Html.PartialAsync("_DisplayHeroSkills", Model)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
